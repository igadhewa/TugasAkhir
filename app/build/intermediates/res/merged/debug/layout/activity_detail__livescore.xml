<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail__livescore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mobile.livescoreapp.Detail_Livescore"
    app:layout_collapseParallaxMultiplier="1.0">

    <TextView
        android:text="Etihad Stadium "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textStadium"
        android:layout_weight="0.02"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="?attr/actionMenuTextColor" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12">

        <TextView
            android:text="2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textScoreHome"
            android:layout_weight="1"
            android:textSize="100sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:background="@drawable/rounded2"
            android:textColor="?attr/colorBackgroundFloating" />

        <TextView
            android:text=":"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:id="@+id/textView7"
            android:textSize="100sp"
            android:gravity="center" />

        <TextView
            android:text="4"
            android:layout_height="wrap_content"
            android:id="@+id/textScoreAway"
            android:textSize="100sp"
            android:gravity="center"
            android:background="@drawable/rounded2"
            android:textColor="?attr/colorBackgroundFloating"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Liverpool"
            android:layout_height="wrap_content"
            android:id="@+id/textHome"
            android:layout_weight="1"
            android:textSize="25sp"
            android:layout_width="200dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Manhester United"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textAway"
            android:layout_weight="1"
            android:textSize="25sp"
            android:layout_gravity="right"
            android:gravity="center"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewEvents" />
    </LinearLayout>

</LinearLayout>
