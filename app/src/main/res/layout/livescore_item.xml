<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"

    android:descendantFocusability="blocksDescendants">

    <TextView
        android:text="Manchester City"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/favorite_home_textview"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_width="150dp"
        android:textSize="14sp" />

    <TextView
        android:text="0-2"
        android:layout_height="wrap_content"
        android:id="@+id/favorite_status_textview"
        android:layout_alignBaseline="@+id/favorite_home_textview"
        android:layout_alignBottom="@+id/favorite_home_textview"
        android:layout_toStartOf="@+id/txtView_Away"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded"
        android:textColor="@android:color/background_light"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="Manchester United"
        android:layout_height="wrap_content"
        android:id="@+id/txtView_Away"
        android:gravity="right"
        android:layout_alignBaseline="@+id/favorite_status_textview"
        android:layout_alignBottom="@+id/favorite_status_textview"
        android:layout_toStartOf="@+id/btn_remove_from_favorite"
        android:layout_gravity="center_vertical"
        android:layout_width="150dp" />


    <ImageButton
        android:layout_width="wrap_content"
        android:id="@+id/btn_remove_from_favorite"
        android:layout_weight="1"
        android:background="@null"
        android:layout_gravity="center_vertical"
        android:elevation="1dp"
        app:srcCompat="@drawable/add"
        android:layout_height="60dp"/>
</LinearLayout>